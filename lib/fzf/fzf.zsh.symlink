# Setup fzf
# ---------
if [[ ! "$PATH" == */home/stotakura/.fzf/bin* ]]; then
  export PATH="$PATH:/home/stotakura/.fzf/bin"
fi

# Auto-completion
# ---------------
[[ $- == *i* ]] && source "/home/stotakura/.fzf/shell/completion.zsh" 2> /dev/null

# Key bindings
# ------------
source "/home/stotakura/.fzf/shell/key-bindings.zsh"

# Keep FZF history
export FZF_DEFAULT_OPTS="--history=$HOME/.fzf_history"
